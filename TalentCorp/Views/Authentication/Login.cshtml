@model TalentCorp.Entities.Usuario;

@{
    Layout = null;
}

<html lang="es">
<head>
    <title>Inicio de Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
</head>

<body>
    <h2> Login </h2>
    <div>
        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header text-center fw-bold">
                        Iniciar Sesión
                    </div>
                    <div class="card-body">
                        <form asp-controller="Authentication" asp-action="Login" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Nombre de usuario" required asp-for="Nombre" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Contrasena" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">¡Inicia mi sesión!</button>
                            </div>
                            <div class="text-center">
                                <a asp-controller="Authentication" asp-action="Registro">¿No tienes una cuenta? ¡Haz clíc aquí!</a>
                            </div>

                            @if(ViewData["Mensaje"]!=null)
                            {
                                <div class="alert alert-danger text-center" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>