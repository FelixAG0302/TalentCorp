@model TalentCorp.Models.DB.User;

@{
    Layout = null;
}

<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
</head>

<body>
    <h2> Login </h2>
    <div>
        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header text-center">
                        Iniciar sesion
                    </div>
                    <div class="card-body">
                        <form asp-controller="Login" asp-action="Login" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Nombre usuario" required asp-for="UserName" />
                            <input class="form-control mb-3" type="password" placeholder="Contrasena" required asp-for="Password" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Inciar sesion</button>
                            </div>
                            <div class="text-center">
                                <a asp-controller="Login" asp-action="Registro">No tinees una cuenta? Clic Aqui</a>
                            </div>

                            @if(ViewData["Mensaje"]!=null)
                            {
                                <div class="alert alert-danger text-center" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>