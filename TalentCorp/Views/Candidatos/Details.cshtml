@model TalentCorp.Entities.Candidato

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .card {
        width: 40%;
        border-radius: 8px;
        margin-left: 30%;
        margin-right: 30%;
        box-shadow: 0px 0px 5px 5px rgb(0 0 0 / 20%);
        text-align: justify;
        padding-top: 2%;
        padding-right: 3%;
        padding-bottom: 2%;
        padding-left: 3%;
    }

    .formu {
       
    }

    .formuContent {
        margin-bottom: 5%;
    }

    .logo {
        padding-top: 1%;
        position: relative;
        font-weight: bold;
        text-align: center;
    }
</style>



<div>
    <h3 class="logo">Detalles del candidato</h3>
    <hr />
    <div class="card">
    <dl class="row">
        <dt class = "col-sm-5">
            @Html.DisplayNameFor(model => model.Cédula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cédula)
        </dd>
        <hr />
        <dt class = "col-sm-5">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
            <hr />
        <dt class = "col-sm-5">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
            <hr />
        <dt class = "col-sm-5">
                Fecha de Solicitud
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>
            <hr />
        <dt class = "col-sm-5">
            @Html.DisplayNameFor(model => model.Departamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departamento)
        </dd>
    </dl>
    </div>
</div>
<br />
<div style="text-align:center">
    <a asp-action="Index">Convertir en Empleado</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
