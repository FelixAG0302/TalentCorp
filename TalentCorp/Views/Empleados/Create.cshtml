@model TalentCorp.Entities.Empleado

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .card {
        width: 40%;
        border-radius: 8px;
        margin-left: 30%;
        margin-right: 30%;
        box-shadow: 0px 0px 5px 5px rgb(0 0 0 / 20%);
        text-align: justify;
    }

    .formu {
        padding-top: 5%;
        padding-right: 10%;
        padding-bottom: 5%;
        padding-left: 10%;
    }

    .formuContent {
        margin-bottom: 5%;
    }

    .logo {
        padding-top: 1%;
        position: relative;
        font-weight: bold;
        text-align: center;
    }
</style>

<h3 class="logo">Agregar empleado</h3>

<hr/>
<div class="card">
    <div class="formu">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="formuContent">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control"/>
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="formuContent">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control"/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="formuContent">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control"/>
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="formuContent">
                <label asp-for="FechaIngreso" class="control-label">Fecha de Ingreso</label>
                <input asp-for="FechaIngreso" class="form-control"/>
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="formuContent">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control"/>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="formuContent">
                <label asp-for="PuestoId" class="control-label">Puesto</label>
                <select asp-for="PuestoId" class="form-control" asp-items="ViewBag.PuestoId"></select>
            </div>
            <div class="text-align:right">
                <input type="submit" value="Agregar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> <- Regresar </a>
</div>