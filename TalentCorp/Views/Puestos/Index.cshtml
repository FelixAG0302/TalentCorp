@model IEnumerable<TalentCorp.Entities.Puesto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripción)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NivelRiesgo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioMax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripción)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NivelRiesgo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <button class="btn btn-primary">Editar</button>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id">
                    <button class="btn btn-success">Visualizar</button>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <button class="btn btn-danger">Eliminar</button>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
